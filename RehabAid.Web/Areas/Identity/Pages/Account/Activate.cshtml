@page
@model ActivateModel
@{
    Layout = "/Pages/Shared/_BlankLayout.cshtml";
}
<div class="row">
    <div class="col-md-3">
        <div class="text-center mb-3"><img src="~/logo.png" style="height:64px" /></div>
        <section>
            @if (Model.IsActivated)
            {
            <div class="text-center mt-3">
                <h5 class="text-danger">Account already activated</h5>
                <a class="btn btn-primary" asp-page="Login">Go to Login page <i class="fa fa-sign-in-alt"></i></a>
            </div>
            }
            else
            {
                <form method="post">
                    <div class="card">
                        <div class="card-body">
                            <h3 class="text-center">Account activation</h3>
                            <hr />
                            <div class="form-group">
                                <label asp-for="Input.Email"></label>
                                <input asp-for="Input.Email" readonly class="form-control" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Set a password</label>
                                <input asp-for="Input.Password" class="form-control" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Confirm password</label>
                                <input asp-for="Input.ConfirmPassword" class="form-control" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-footer text-center">
                            <button class="btn btn-success"><i class="fa fa-check-circle"></i> Activate account</button>
                        </div>
                    </div>
                </form>
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
