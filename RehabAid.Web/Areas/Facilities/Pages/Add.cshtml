@page
@model RehabAid.Web.Areas.Facilities.Pages.AddModel
@{
}
@section breadcrumb{
    <a class="breadcrumb-item" asp-page="/Index">Facilities</a>
    <a class="breadcrumb-item" asp-page=".">Add</a>
}


<form method="post" enctype="multipart/form-data">
    <div class="col-md-7 col-ldg-8">
        <div class="card shadow">
            <div class="card-body">
                <div class="row">


                    <div class="form-group">
                        <label>Name <span class="text-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="TreatmentFacility.Name">
                    </div>



                    <div class="form-group">
                        <label>Email <span class="text-danger">*</span></label>
                        <input class="form-control" type="email"  asp-for="TreatmentFacility.Email">
                    </div>

                    <div class="form-group">
                        <label>Phone Number</label>
                        <input class="form-control" type="text" asp-for="TreatmentFacility.PhoneNumber">
                    </div>


                    <div class="form-group">
                        <label>Type</label>
                        <select class="form-select" asp-for="TreatmentFacility.TypeId" asp-items="Model.FacilityTypes"></select>
                    </div>





                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label>Address</label>
                                <input type="text" class="form-control " asp-for="TreatmentFacility.Address">
                            </div>
                        </div>

                    </div>





                   
                    <div class=" form-group row">
                        <label class="col-sm-4">Profile Picture</label>
                        <input  class="form-control" asp-for="logo" type="file" accept="*" />
                    </div>
                </div>
            </div>
            <div class="card-footer text-end">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-floppy-o" aria-hidden="true"></i> Submit</button>
                           </div>
        </div>
</div>
</form>
