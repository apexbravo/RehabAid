@page
@model RehabAid.Web.Areas.Facilities.Pages.Specialists.Review.DetailsModel
@{
}
@section breadcrumb{
    <a class="breadcrumb-item" asp-page="/Index">Specialists</a>
    <a class="breadcrumb-item" asp-page="./Index">Reviews</a>
    <a class="breadcrumb-item active">Details</a>
}

<div class="mt-4">
    <div>
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body">
                    <h4 class="card-title">Review Details</h4>
                    <hr>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="review">Review</label>
                                <p class="form-control-static" id="review">@Model.Review.Review</p>
                            </div>
                            <div class="form-group">
                                <label for="sentiment">Sentiment</label>
                                <span class="badge bg-info">@Model.Review.Sentiment</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-end">
                    <a asp-page="./Edit" asp-route-id="@Model.Review.Id" class="btn btn-primary"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit</a>
                    <a asp-page="./Delete" asp-route-id="@Model.Review.Id" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i> Delete</a>
                </div>
            </div>
        </div>
    </div>
</div>