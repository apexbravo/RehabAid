@page
@model RehabAid.Web.Areas.Facilities.Pages.Specialists.Review.AddModel
@{
}


@section breadcrumb{
    <a class="breadcrumb-item" asp-page="/Index">Specialists</a>
    <a class="breadcrumb-item" asp-page=".">Review</a>
}

<form method="post" enctype="multipart/form-data">
    <div class="col-md-7 col-ldg-8">
        <div class="card shadow">
            <div class="card-body">
                <div class="row">
                   


                    <div class="form-group">
                        <label>Patient Name</label>
                        <input class="form-control" type="text" asp-for="Patient.Fullname" readonly="readonly">
                    </div>

                    <div class="form-group">
                        <label>Time of Session</label>
                        <select class="form-select" asp-for="SpecialistReview.TimeOfSessionId" asp-items="Model.TimeOfSessions"></select>
                    </div>
                    <div class="form-group">
                        <label for="review">Review</label>
                        <textarea class="form-control" id="review" rows="5" asp-for="SpecialistReview.Review"></textarea>
                    </div>
                </div>


            </div>
            <div class="card-footer text-end">
                <button type="submit" class="btn btn-primary"><i class="fa fa-floppy-o" aria-hidden="true"></i> Submit</button>
            </div>
        </div>
    </div>
</form>