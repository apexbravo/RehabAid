@page
@model RehabAid.Web.Areas.Facilities.Pages.AddReservationModel
@{
}
@section breadcrumb{
    <a class="breadcrumb-item" asp-page="/Index">Reservations</a>
    <a class="breadcrumb-item" asp-page=".">Add</a>
}


<form method="post" enctype="multipart/form-data">
    <div class="col-md-7 col-ldg-8">
        <div class="card shadow">
            <div class="card-body">
                <div class="row">
                    <div class="form-group">
                        <label>Name <span class="text-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="Reservation.Name">
                    </div>
                    <div class="form-group">
                        <label>Phone Number <span class="text-danger">*</span></label>
                        <input class="form-control" type="text" asp-for="Reservation.PhoneNumber">
                    </div>
                    <div class="form-group">
                        <label>Email <span class="text-danger">*</span></label>
                        <input class="form-control" type="email" asp-for="Reservation.Email">
                    </div>


                    <div class="form-group">
                        <label>Description <span class="text-danger">*</span></label>
                        <input class="form-control" asp-for="Reservation.Description">
                    </div>

                </div>

            </div>
            <div class="card-footer text-end">
                <button type="submit" class="btn btn-primary"><i class="fa fa-floppy-o" aria-hidden="true"></i> Add</button>
            </div>
        </div>
</div>
</form>